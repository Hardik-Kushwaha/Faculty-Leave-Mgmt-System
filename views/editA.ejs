      <form action="/accounts/<%=accounts._id%>?_method=PUT" method="POST">
        <div class="row">
          <div class="col">
            <h1 style="text-align:center;">Edit Profile<%=accounts.name%></h1>
            <div class="form-group form-inline">
              <label
                for="name"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    padding-right: 20px;
                    "
                >Name:</label
              >
              <input
                class="form-control"
                type="text"
                id="name"
                value="<%= accounts.name%>"
                name="accounts[name]"
              />
            </div>
            <div class="form-group form-inline">
              <label
                for="username"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    padding-right: 20px;
                    "
                >Username:</label
              >
              <input
                class="form-control"
                type="text"
                id="username"
                value="<%= accounts.username%>"
                name="accounts[username]"
              />
            </div>
            <!--
            <div class="form-group form-inline">
              <label
