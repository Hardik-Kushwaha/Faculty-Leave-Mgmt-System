.scroll-txt {
    position: absolute;
    top: 80%;
    left: 50%;
    transform: translate(-50%, -50%);
    overflow-x: auto;
    overflow-y: hidden;
    display: flex;
    flex-direction: column;
    gap: 1vw;
    padding: 2vw;
    z-index: 9;


}

.row {
    display: flex;
    flex-wrap: nowrap;
    transform: rotate(-5deg);
}

.scroll-txt::-webkit-scrollbar {
    display: none;
}

.row::-webkit-scrollbar {
    display: none;
}

.row h4 {
    font-size: 4vw;
    display: inline-block;
    white-space: nowrap;
    text-transform: uppercase;
    margin-right: 4px;
    color: #b00e2f;
    font-family: neurath;
}

.row h4 span {
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: #111;
    color: transparent;
    font-weight: 200;
}

.row1 h4,
.row3 h4 {
    animation: scroll 10s infinite linear both;

}

.row2 h4 {
    animation: scrollBack 10s infinite linear both;
}


@keyframes scroll {
    0% {
        transform: translate(0);
    }

    100% {
        transform: translateX(100%);
    }

}

@keyframes scrollBack {
    0% {
        transform: translate(0);
    }

    100% {
        transform: translateX(-100%);
    }

}

