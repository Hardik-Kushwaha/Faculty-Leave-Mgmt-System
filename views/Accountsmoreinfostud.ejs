<% include ./partial/header %>
<div
  class="col-sm-6"
  style="    flex: 0 0 50%;
    max-width: 60%;
    margin-left: 300px;
    margin-top: 80px;  text-align: -webkit-center;"
>
  <form
    action="/accounts/<%=accounts.id%>/leave/<%=faculty.id%>/info"
    method="POST"
  >
    <div
      class="container-fluid bg-3 text-center"
      style="border: 2px solid rgb(88, 88, 150)"
    >
      <h1><%=faculty.name %></h1>
      <br />
      <div class="row">
        <div class="col-sm-4">
          <img
            style="border-radius: 50%; width: 100%;"
            src="<%=faculty.image%>"
            alt="image"
          />
        </div>
        <%faculty.leaves.forEach(function(leave){%>
        <div class="col-sm-4">
          <h3><strong> Subject:</strong><%=leave.subject %></h3>
          <h3>Status:<%=leave.accountsstatus %></h3>
          <h3>From:<%=moment(leave.to).format('DD/MM/YYYY') %></h3>
          <h3>To:<%=moment(leave.from).format('DD/MM/YYYY') %></h3>
          <h3><%=leave.days%></h3>

          <h3>Department:<%=faculty.department %></h3>
          <div style="float:inherit">
            <input
              type="submit"
              class="btn btn-block btn-success"
              name="action"
              value="Approve"
            />
            <input
              type="submit"
              class="btn btn-block btn-danger"
              name="action"
              value="Decline"
            />
            <a href="/accounts/home">Back</a>
          </div>
        </div>

        <%})%>
      </div>
    </div>
  </form>
</div>
<% include ./partial/footer %>
