<% include ./partial/header %> <% include ./partial/accountsfunction%>
<div
  class="col-sm-6"
  style="    flex: 0 0 50%;
    max-width: 60%;
    margin-left: 431px;
    margin-top: -251px;  text-align: -webkit-center;"
>
  <form
    action="/accounts/<%=accounts.id%>/leave/<%=faculty.id%>/info"
    method="POST"
  >
    <div
      class="container-fluid bg-3 text-center"
    >
      <h1 style="margin-top: 40px;"><%=faculty.name %></h1>
      <br />
      <div class="row">
        <div class="col-sm-4">
          <img
            style="border-radius: 50%; width: 100%;"
            src="<%=faculty.image%>"
            alt="image"
          />
        </div>
        <%faculty.leaves.forEach(function(leave){%>
        <div class="col-sm-4" style="width: 100%;
                              border: 1px;
                              padding-left: 20px;
                              padding-top: 20px;
                              padding-bottom: 20px;
                              border-color: rgb(230, 230, 230);
                              border-radius: 30px;
                              border-style: ridge;
                              margin: 0px;">
          <h4><strong>Subject:</strong> <%=leave.subject %></h4>
          <h5>Status: <%=leave.accountsstatus %></h5>
          <h5>From: <%=moment(leave.from).format('DD/MM/YYYY') %></h5>
          <h5>To: <%=moment(leave.to).format('DD/MM/YYYY') %></h5>
          <h5>Total Days: <%=leave.days%></h5>
          <h5>Department: <%=faculty.department %></h5>
          <div style="float:inherit">
            <input
              type="submit"
              class="btn btn-block btn-success"
              name="action"
              value="Approve"
            />
            <input
              type="submit"
              class="btn btn-block btn-danger"
              name="action"
              value="Decline"
            />
          </div>
        </div>
        
        <%})%>
      </div>
    </div>
    <a href="/accounts/<%=accounts._id%>/leave">Back</a>
  </form>
</div>
<% include ./partial/footer %>
